{ 
	"manifest_version": 2,
	"name": "Musescore Downloader",
	"version": "0.1",
	"description": "Downloads MusceScore music sheets for free",
	"icons": {
		"16": "images/icon16.png",        
		"24": "images/icon24.png",          
		"32": "images/icon32.png",
		"48": "images/icon48.png",
		"64": "images/icon64.png",
		"128": "images/icon128.png"         
	},
	"permissions": ["https://www.musescore.com/", "tabs", "contextMenus"],
	"content_scripts": [
        {
          "matches": [
            "https://musescore.com/*/scores/*"
          ],
          "js": ["jquery-3.5.1.min.js", "content.js"]
        }
	],
	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},
	"page_action": {
		"default_title": "Download Music Sheets",
		"default_icon": {                 
            "16": "images/icon16.png",        
            "24": "images/icon24.png",          
			"32": "images/icon32.png",
			"48": "images/icon48.png",
            "64": "images/icon64.png",
            "128": "images/icon128.png"           
    	}
    }
}
